<%= turbo_frame_tag dom_id(post) do %>
  <% @comments = post.comments %>
  <% @post = post %>
  
  <div style="border: 2px solid #ff0000; margin: 10px; padding: 10px;">

    <div>
      <p>
        <%= post.body %>
      </p>
    </div>
    <br>
    <h6>Comments</h6>
    <div>

        <%= render "comments/form", comment: @comments %>


      <%= turbo_frame_tag "comments" do %>
        <%= render @comments %>
      <% end %>
    </div>
  </div>

<% end %>